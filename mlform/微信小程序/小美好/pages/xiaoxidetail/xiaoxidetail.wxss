/*总体布局*/
.zt{
    display: flex;
    flex-direction: row;
    padding: 20rpx  20rpx 40rpx 20rpx;
}
/*头像大小*/
.img{
    width: 100rpx;
    height: 100rpx;
}
.tx{
    margin-right: 15rpx;
}
.nr{
    width: 70%;
}
/*用户名称*/
.id{
    font-weight: 1000;
    font-size: 40rpx;
    margin-bottom: 15rpx;
}
/*时间*/
.time-d{
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
    margin: 10rpx 0rpx 10rpx 0rpx;
}
.time{
    color: rgb(154, 160, 165);
    margin-right: 20rpx;
}
.d{
    color: rgb(103, 29, 223);
}
/*分享转发点赞*/
.hud-img{
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}
.hud{
    display: flex;
    flex-direction: row;
    align-items: center;

}
.hud-font{
    display: flex;
    flex-direction: row;
   font-size: 35rpx;
   justify-content: space-between;
   margin: 10rpx 0rpx 10rpx 0rpx;
}
/*动态图片*/
.imgs_{
    margin-top: 10rpx;
}
.imgs_1{
    width: 500rpx;
    height: 500rpx;
}
.imgs_4{
    width: 240rpx;
    height: 240rpx;
    margin-right: 10rpx;
}
.imgs_5{
    width: 155rpx;
    height: 150rpx;
    margin-right: 10rpx;
}
/*点赞*/
.like_{
    display: flex;
    flex-direction: row;
    background-color: rgb(231, 237, 243);
    padding: 10rpx 20rpx;
    margin: 0rpx 20rpx;
}
.like_1{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.picture_1{
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
}
.picture_2{
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    margin: 10rpx 5rpx;
}
/*评论*/
.say_{
    background-color:rgb(231, 237, 243);
    padding:20rpx 20rpx;
    margin:0rpx 20rpx;
    display: flex;
    flex-direction: column;
}
.say_img_1{
    width: 45rpx;
    height: 45rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
}
.say_1{
    display: flex;
    flex-direction: row;
    margin-bottom: 20rpx;
}
.say_img_2{
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
}
.say_time{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 520rpx;
}
.say_time_1{
    color: rgb(130, 212, 236);
    font-weight:550;
}
.say_time_2{
    color: rgb(167, 158, 158);
    font-size: 30rpx;
}
.say_text_1{
    margin-top: 14rpx;
}
/*发布*/
.reply{
    background-color:rgb(231, 237, 243);
    padding: 20rpx 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    bottom: 0;
}
.reply_left{
    background-color: rgb(255, 255, 255);
    color: #7f7f7f;
    border-radius: 20rpx;
    margin-right: 20rpx;
}
.reply_1{
    padding: 10rpx 20rpx;
    width: 500rpx;
    margin-right: 10rpx;
}
.reply_button{
    color: #7f7f7f;
    border: solid  1rpx #7f7f7f;
    border-radius: 10rpx;
    padding: 10rpx 20rpx;
}